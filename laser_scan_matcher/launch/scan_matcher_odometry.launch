<launch>

  <arg name="fixed_frame" default="/odom"/>
  <arg name="base_frame" default="/base_link"/>
  <arg name="use_imu" default="false"/>
  <arg name="use_odom" default="true"/>
  <arg name="use_vel" default="false"/>
  <arg name="publish_tf" default="true"/>
  <arg name="publish_pose" default="false"/>
  <arg name="publish_pose_stamped" default="false"/>
  <arg name="publish_nav_odom" default="true"/>
  <arg name="max_iterations" default="10"/>
  <arg name="alpha" default="0.2"/>
  <arg name="beta" default="0.2"/>

  <node name="laser_scan_matcher_node" pkg="laser_scan_matcher" type="laser_scan_matcher_node" output="screen" respawn="true">
    <param name="fixed_frame" value="$(arg fixed_frame)"/>
    <param name="base_frame" value="$(arg base_frame)"/>
    <param name="use_imu" value="$(arg use_imu)"/>
    <param name="use_odom" value="$(arg use_odom)"/>
    <param name="use_vel" value="$(arg use_vel)"/>
    <param name="publish_tf" value="$(arg publish_tf)"/>
    <param name="publish_pose" value="$(arg publish_pose)"/>
    <param name="publish_pose_stamped" value="$(arg publish_pose_stamped)"/>
    <param name="publish_nav_odom" value="$(arg publish_nav_odom)"/>
    <param name="max_iterations" value="$(arg max_iterations)"/>
    <param name="alpha" value="$(arg alpha)"/>
    <param name="beta" value="$(arg beta)"/>
    <remap from="/odom_scan" to="/odom"/>
  </node>

</launch>
  
