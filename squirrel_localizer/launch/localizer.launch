<launch>
  <arg name="use_kinect" default="true" />
  <arg name="octomap_file" default="$(find squirrel_navigation)/octomaps/default-octomap.bt"/>
  <arg name="config_file" default="$(find squirrel_localizer)/config/robotino_localization.yaml"/>

  <include file="$(find squirrel_3d_mapping)/launch/3d_mapping.launch">
    <arg name="octomap_file" value="$(arg octomap_file)"/>
  </include>

  <node pkg="squirrel_localizer" type="squirrel_localizer_node" name="squirrel_localizer_node" output="screen" respawn="true">
    <rosparam file="$(find squirrel_localizer)/config/last_pose.yaml" command="load" />
    <rosparam file="$(arg config_file)" command="load" />
    <remap from="/point_cloud" to="/kinect/data/points" if="$(arg use_kinect)"/>
  </node>

</launch>
